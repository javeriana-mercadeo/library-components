<section class="related-programs_container" id="section-ten">
  <div class="container related-programs" id="relacionados">
    <h2
      class="title title-2xl title-center title-semibold related-programs__title"
      data-lfr-editable-id="title-relacionados-title"
      data-lfr-editable-type="text">
      Explora Programas Relacionados
    </h2>
    <lfr-editable
      id="relacionados-description"
      type="rich-text"
      class="paragraph paragraph-neutral paragraph-md paragraph-center related-programs__description">
      Conoce otros programas que complementan tus intereses y expanden tus oportunidades académicas
      y profesionales.
    </lfr-editable>
    <div class="related-programs__carousel-container">
      <div class="related-programs__carousel swiper related-programs-swiper">
        <button
          class="swiper-slide-button related-programs__prev related-programs-prev"
          aria-label="Ver programas anteriores"
          type="button">
          <i class="ph ph-arrow-circle-left" aria-hidden="true"></i>
        </button>
        <div class="related-programs__slides swiper-wrapper card-list" role="list">
          <lfr-widget-web-content id="widget1"></lfr-widget-web-content>
        </div>
        <button
          class="swiper-slide-button related-programs__next related-programs-next"
          aria-label="Ver más programas"
          type="button">
          <i class="ph ph-arrow-circle-right" aria-hidden="true"></i>
        </button>
        <div
          class="swiper-pagination related-programs__pagination related-programs-pagination"
          role="tablist"
          aria-label="Control de páginas del carrusel"></div>
      </div>
    </div>
  </div>
</section>